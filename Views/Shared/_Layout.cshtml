    <script>
        var themeToggleDarkIcon = document.getElementById('theme-toggle-dark-icon');
        var themeToggleLightIcon = document.getElementById('theme-toggle-light-icon');
        var themeToggleBtn = document.getElementById('theme-toggle');

        // Tema tercihini localStorage'dan yükle ve uygula
        function applyTheme(theme) {
            if (theme === 'dark') {
                document.documentElement.classList.add('dark');
                themeToggleLightIcon.classList.remove('hidden');
                themeToggleDarkIcon.classList.add('hidden');
            } else {
                document.documentElement.classList.remove('dark');
                themeToggleDarkIcon.classList.remove('hidden');
                themeToggleLightIcon.classList.add('hidden');
            }
        }

        // localStorage kontrol et ve sayfa yüklendiğinde tema uygula
        var currentTheme = localStorage.getItem('color-theme');
        if (currentTheme) {
            applyTheme(currentTheme);
        } else {
            // Sistem temasına göre başlangıç teması belirle
            var systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            applyTheme(systemPrefersDark ? 'dark' : 'light');
        }

        // Sistem temasındaki değişiklikleri dinle
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', function (e) {
            if (!localStorage.getItem('color-theme')) {
                applyTheme(e.matches ? 'dark' : 'light');
            }
        });

        // Tema butonuna tıklandığında tema değiştir ve kaydet
        themeToggleBtn.addEventListener('click', function () {
            if (document.documentElement.classList.contains('dark')) {
                applyTheme('light');
                localStorage.setItem('color-theme', 'light');
            } else {
                applyTheme('dark');
                localStorage.setItem('color-theme', 'dark');
            }
        });

        // Yan menüyü açıp kapatma işlevselliği
        const openSidebar = document.getElementById('open_sidebar');
        const sidebarWrapper = document.getElementById('sidebar_wrapper');

        // Yan menüyü aç
        openSidebar.addEventListener('click', () => {
            sidebarWrapper.classList.toggle('opacity-0');
            sidebarWrapper.classList.toggle('invisible');
        });

        // Yan menüyü kapatma
        sidebarWrapper.addEventListener('click', () => {
            sidebarWrapper.classList.add('opacity-0');
            sidebarWrapper.classList.add('invisible');
        });

    </script>
    <script>
        // Dropdown Toggle Functionality
        const menuButton = document.getElementById("user-menu-button");
        const dropdown = document.getElementById("user-dropdown");

        menuButton.addEventListener("click", () => {
            dropdown.classList.toggle("hidden");
        });

        document.addEventListener("click", (event) => {
            if (!menuButton.contains(event.target) && !dropdown.contains(event.target)) {
                dropdown.classList.add("hidden");
            }
        });
    </script>
